<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/inlineBlockViewKeyText"
        style="@style/InlineBlockViewKey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Key is here" />

    <TextView
        android:id="@+id/inlineBlockViewValueText"
        style="@style/InlineBlockViewValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/inlineBlockViewTextMarginHorz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inlineBlockViewKeyText"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Value is there but it can be here or even whatever you want, that is not an issue here." />
</androidx.constraintlayout.widget.ConstraintLayout>