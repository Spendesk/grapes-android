<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/simpleEntryItemPrimaryImageVerticalHalfGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/listItemPrimaryImageVerticalHalfGuidelineBegin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/simpleEntryItemPrimaryImageHorizontalHalfGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/listItemPrimaryImageHorizontalHalfGuidelineBegin" />

    <ImageView
        android:id="@+id/simpleEntryItemPrimaryImage"
        style="@style/SimpleEntryItemPrimaryImage"
        android:layout_width="@dimen/listItemPrimaryImageSize"
        android:layout_height="@dimen/listItemPrimaryImageSize"
        android:layout_marginStart="@dimen/normalMargin"
        android:layout_marginEnd="@dimen/smallMargin"
        android:layout_marginBottom="@dimen/smallMargin"
        app:layout_constraintBottom_toTopOf="@id/simpleEntryItemContentEndBarrier"
        app:layout_constraintEnd_toStartOf="@id/simpleEntryItemBarrierStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/simpleEntryItemSecondaryImage"
        style="@style/SimpleEntryItemSecondaryImage"
        android:layout_width="@dimen/listItemSecondaryImageSize"
        android:layout_height="@dimen/listItemSecondaryImageSize"
        app:layout_constraintBottom_toTopOf="@id/simpleEntryItemContentEndBarrier"
        app:layout_constraintEnd_toStartOf="@id/simpleEntryItemBarrierStart"
        app:layout_constraintStart_toEndOf="@id/simpleEntryItemPrimaryImageVerticalHalfGuideline"
        app:layout_constraintTop_toBottomOf="@id/simpleEntryItemPrimaryImageHorizontalHalfGuideline"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/simpleEntryItemImageAltText"
        style="@style/SimpleEntryItemImageAltText"
        android:layout_width="@dimen/listItemPrimaryImageSize"
        android:layout_height="@dimen/listItemPrimaryImageSize"
        android:layout_marginStart="@dimen/normalMargin"
        android:layout_marginEnd="@dimen/smallMargin"
        android:layout_marginBottom="@dimen/smallMargin"
        app:layout_constraintBottom_toTopOf="@id/simpleEntryItemContentEndBarrier"
        app:layout_constraintEnd_toStartOf="@id/simpleEntryItemBarrierStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/simpleEntryItemBarrierStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="simpleEntryItemPrimaryImage,simpleEntryItemSecondaryImage,simpleEntryItemImageAltText" />

    <TextView
        android:id="@+id/simpleEntryItemTitleStart"
        style="@style/SimpleEntryItemTitleStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/listItemTitleStartMarginHorz"
        android:layout_marginEnd="@dimen/listItemTitleStartMarginHorz"
        app:layout_constraintBottom_toTopOf="@+id/simpleEntryItemDescriptionStart"
        app:layout_constraintEnd_toStartOf="@id/simpleEntryItemBarrierEnd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/simpleEntryItemBarrierStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:drawableEnd="@drawable/ic_clear_round"
        tools:text="Title start here" />

    <TextView
        android:id="@+id/simpleEntryItemDescriptionStart"
        style="@style/SimpleEntryItemDescriptionStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/listItemTitleStartMarginHorz"
        android:layout_marginEnd="@dimen/listItemTitleStartMarginHorz"
        app:layout_constraintBottom_toTopOf="@id/simpleEntryItemContentEndBarrier"
        app:layout_constraintEnd_toStartOf="@id/simpleEntryItemBarrierEnd"
        app:layout_constraintStart_toEndOf="@id/simpleEntryItemBarrierStart"
        app:layout_constraintTop_toBottomOf="@+id/simpleEntryItemTitleStart"
        tools:text="Employee name • Description"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/simpleEntryItemBarrierEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="simpleEntryItemTitleEnd,simpleEntryItemDescriptionEnd" />

    <TextView
        android:id="@+id/simpleEntryItemTitleEnd"
        style="@style/SimpleEntryItemTitleEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/simpleEntryItemDescriptionEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="71,03 €" />

    <TextView
        android:id="@+id/simpleEntryItemDescriptionEnd"
        style="@style/SimpleEntryItemDescriptionEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/simpleEntryItemContentEndBarrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleEntryItemTitleEnd"
        tools:text="12 Sept." />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/simpleEntryItemContentEndBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="simpleEntryItemDescriptionEnd" />

    <com.spendesk.grapes.messages.MessageInlineView
        android:id="@+id/simpleEntryItemMessage"
        style="@style/SimpleEntryItemMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/listItemTitleStartMarginHorz"
        android:layout_marginTop="@dimen/smallMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/simpleEntryItemContentEndBarrier"
        tools:drawableStart="@drawable/ic_warning"
        tools:messageStyle="warning"
        tools:text="Missing info"
        tools:visibility="visible" />
</merge>