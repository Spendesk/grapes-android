<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:id="@+id/simpleSectionItemStartImage"
        style="@style/SimpleSectionItemStartImage"
        android:layout_width="@dimen/listSectionItemStartImageSize"
        android:layout_height="@dimen/listSectionItemStartImageSize"
        android:layout_marginEnd="@dimen/normalMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/simpleSectionItemStartText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/ic_crop"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/simpleSectionItemStartText"
        style="@style/SimpleSectionItemStartText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/simpleSectionItemEndText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/simpleSectionItemStartImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Left Text" />

    <TextView
        android:id="@+id/simpleSectionItemEndText"
        style="@style/SimpleSectionItemEndText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Right Text" />
</merge>