<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/customNumberKeyboardMinHeight"
    tools:background="@color/colorPrimaryDark">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/customNumberKeyboardFlow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="customNumberKeyboard1,customNumberKeyboard2,customNumberKeyboard3,customNumberKeyboard4,customNumberKeyboard5,customNumberKeyboard6,customNumberKeyboard7,customNumberKeyboard8,customNumberKeyboard9,customNumberKeyboardExtraButtonLayout,customNumberKeyboard0,customNumberKeyboardDeleteImage"
        app:flow_horizontalStyle="spread"
        app:flow_maxElementsWrap="3"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/customNumberKeyboard1"
        style="@style/CustomNumberKeyboardTextLight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/customNumberKeyboard1" />

    <TextView
        android:id="@+id/customNumberKeyboard2"
        style="@style/CustomNumberKeyboardTextLight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/customNumberKeyboard2" />

    <TextView
        android:id="@+id/customNumberKeyboard3"
        style="@style/CustomNumberKeyboardTextLight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/customNumberKeyboard3" />

    <TextView
        android:id="@+id/customNumberKeyboard4"
        style="@style/CustomNumberKeyboardTextLight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/customNumberKeyboard4" />

    <TextView
        android:id="@+id/customNumberKeyboard5"
        style="@style/CustomNumberKeyboardTextLight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/customNumberKeyboard5" />

    <TextView
        android:id="@+id/customNumberKeyboard6"
        style="@style/CustomNumberKeyboardTextLight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/customNumberKeyboard6" />

    <TextView
        android:id="@+id/customNumberKeyboard7"
        style="@style/CustomNumberKeyboardTextLight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/customNumberKeyboard7" />

    <TextView
        android:id="@+id/customNumberKeyboard8"
        style="@style/CustomNumberKeyboardTextLight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/customNumberKeyboard8" />

    <TextView
        android:id="@+id/customNumberKeyboard9"
        style="@style/CustomNumberKeyboardTextLight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/customNumberKeyboard9" />

    <FrameLayout
        android:id="@+id/customNumberKeyboardExtraButtonLayout"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/customNumberKeyboardExtraButtonImage"
            style="@style/CustomNumberKeyboardExtraButtonImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/customNumberKeyboardExtraButtonText"
            style="@style/CustomNumberKeyboardTextLight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/customNumberKeyboardComma"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/customNumberKeyboard0"
        style="@style/CustomNumberKeyboardTextLight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/customNumberKeyboard0" />

    <ImageView
        android:id="@+id/customNumberKeyboardDeleteImage"
        style="@style/CustomNumberKeyboardDeleteImage"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>