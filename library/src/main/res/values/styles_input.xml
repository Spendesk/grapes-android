<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchInputEditText">
        <item name="android:paddingTop">@dimen/searchInputEditTextPadding</item>
        <item name="android:paddingBottom">@dimen/searchInputEditTextPaddingBottom</item>
        <item name="android:paddingStart">@dimen/searchInputEditTextPadding</item>
        <item name="android:paddingEnd">@dimen/searchInputEditTextPadding</item>
        <item name="android:drawablePadding">@dimen/searchInputPrimaryDrawableCompoundPadding</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/searchInputTextSize</item>
        <item name="android:textColor">@color/searchInputPrimaryTextColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchInputProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>