<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputSearchMainEditText">
        <item name="android:drawablePadding">@dimen/inputSearchMainPrimaryDrawableCompoundPadding</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/inputSearchMainTextSize</item>
        <item name="android:textColor">@color/searchInputMainPrimaryTextColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="InputSearchMainProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>