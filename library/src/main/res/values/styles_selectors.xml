<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SelectorsHeaderStatusIndicatorFlow">
        <item name="flow_horizontalGap">@dimen/headerStatusIndicatorFlowHorizontalGap</item>
        <item name="flow_wrapMode">chain</item>
    </style>

    <!-- Selector View -->
    <style name="SelectorViewText">
        <item name="android:fontFamily">@font/gt_america_bold</item>
        <item name="android:textSize">@dimen/selectorViewText</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="SelectorViewBadge">
        <item name="android:visibility">gone</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- Tab CardView -->
    <style name="TabCardViewText">
        <item name="android:textSize">@dimen/tabCardViewTextSize</item>
        <item name="android:textColor">@color/selector_tab_cardview_text</item>
        <item name="android:fontFamily">@font/gt_america_bold</item>
    </style>

    <style name="TabCardViewBadge">
        <item name="android:visibility">gone</item>
    </style>

    <!-- KeyboardSuggestionsView -->
    <style name="KeyboardSuggestionsViewTextStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/keyboardSuggestionsViewTextPaddingVertical</item>
        <item name="android:paddingBottom">@dimen/keyboardSuggestionsViewTextPaddingVertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="KeyboardSuggestionsViewTextAppearance">
        <item name="android:fontFamily">@font/font_raw_gt_america_regular</item>
        <item name="android:textSize">@dimen/keyboardSuggestionsViewTextSize</item>
        <item name="android:textColor">@color/keyboardSuggestionsViewText</item>
    </style>

    <style name="KeyboardSuggestionsViewTextAppearance.Light">
        <item name="android:textColor">@color/numberKeyboardTextColorLight</item>
    </style>
</resources>