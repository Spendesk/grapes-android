<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rect_solidwhite_cornerstop12</item>
    </style>

    <style name="BottomSheetPullView">
        <item name="android:background">@drawable/shape_solidgrey5_corner4</item>
    </style>

    <style name="BottomSheetHeaderCloseButton">
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:padding">@dimen/normalMargin</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BottomSheetHeaderTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/bottomSheetHeaderTitle</item>
        <item name="android:textColor">@color/bottomSheetHeaderTitle</item>
        <item name="android:fontFamily">@font/gt_america_bold</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- region ActionMessage Bottom Sheet -->

    <style name="ActionMessageBottomSheetTitleText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/gt_america_bold</item>
        <item name="android:textSize">@dimen/actionMessageBottomSheetTitleTextSize</item>
        <item name="android:textColor">@color/actionMessageBottomSheetTitleTextColor</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="ActionMessageBottomSheetDescriptionText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:textSize">@dimen/actionMessageBottomSheetDescriptionTextSize</item>
        <item name="android:textColor">@color/actionMessageBottomSheetDescriptionTextColor</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="ActionMessageBottomSheetPrimaryButton">
        <item name="grapesButtonSize">normal</item>
        <item name="grapesButtonStyle">primary</item>
    </style>

    <style name="ActionMessageBottomSheetSecondaryButton">
        <item name="grapesButtonSize">normal</item>
        <item name="grapesButtonStyle">secondary</item>
    </style>

    <!-- endregion ActionMessage Bottom Sheet -->

    <!-- region Searchable Bottom Sheet -->

    <style name="BottomSheetSearchableSearchInput">
        <item name="android:drawableStart">@drawable/ic_menu_search</item>
        <item name="textInputStyle">secondary</item>
    </style>

    <style name="BottomSheetSearchableEmptyStateGroup">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="BottomSheetSearchableEmptyStateTitleText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/gt_america_bold</item>
        <item name="android:textSize">@dimen/actionMessageBottomSheetDescriptionTextSize</item>
        <item name="android:textColor">@color/actionMessageBottomSheetDescriptionTextColor</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- endregion Searchable Bottom Sheet -->

    <!-- region EditableText Bottom Sheet -->

    <style name="BottomSheetEditableTextEditText">
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/bottomSheetEditableTextEditTextText</item>
        <item name="android:textSize">@dimen/bottomSheetEditableTextEditTextSize</item>
        <item name="android:textColorHint">@color/bottomSheetEditableTextEditTextHint</item>
    </style>

    <style name="BottomSheetEditableTextValidateButton">
        <item name="grapesButtonSize">normal</item>
        <item name="grapesButtonStyle">primary</item>
        <item name="android:enabled">false</item>
    </style>

    <!-- endregion EditableText Bottom Sheet -->

</resources>