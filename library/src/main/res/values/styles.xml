<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Action Message Bottom Sheet -->

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_rect_solidwhite_cornerstop12</item>
    </style>

    <style name="ActionMessageBottomSheetPullView">
        <item name="android:background">@drawable/shape_solidgrey5_corner4</item>
    </style>

    <style name="ActionMessageBottomSheetTitleText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/gt_america_bold</item>
        <item name="android:textSize">@dimen/actionMessageBottomSheetTitleTextSize</item>
        <item name="android:textColor">@color/actionMessageBottomSheetTitleTextColor</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="ActionMessageBottomSheetDescriptionText">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/gt_america_bold</item>
        <item name="android:textSize">@dimen/actionMessageBottomSheetDescriptionTextSize</item>
        <item name="android:textColor">@color/actionMessageBottomSheetDescriptionTextColor</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="ActionMessageBottomSheetPrimaryButton">
        <item name="grapesButtonSize">normal</item>
        <item name="grapesButtonStyle">primary</item>
    </style>

    <style name="ActionMessageBottomSheetSecondaryButton">
        <item name="grapesButtonSize">normal</item>
        <item name="grapesButtonStyle">secondary</item>
    </style>

    <!-- Default -->
    <style name="Ripple">
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="RippleBorderless">
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- region Buckets -->
    <style name="DeepBlueBucketContainer">
        <item name="android:padding">@dimen/deepBlueBucketContainerPadding</item>
        <item name="android:background">@drawable/ic_bg_bucket_deep_blue</item>
    </style>

    <style name="DeepBlueBucketTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/deepBlueBucketTitleText</item>
        <item name="android:textSize">@dimen/deepBlueBucketTitleTextSize</item>
        <item name="android:fontFamily">@font/gt_america_bold</item>
    </style>

    <style name="DeepBlueBucketDescription">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/deepBlueBucketDescriptionText</item>
        <item name="android:textSize">@dimen/deepBlueBucketDescriptionTextSize</item>
        <item name="android:fontFamily">@font/gt_america</item>
    </style>

    <style name="DeepBlueBucketButton">
        <item name="grapesButtonSize">small</item>
        <item name="grapesButtonStyle">secondary</item>
    </style>

    <style name="ActionInformativeContainer">
        <item name="android:padding">@dimen/actionInformativeContainerPadding</item>
    </style>

    <style name="ActionInformativeTitleText">
        <item name="android:textColor">@color/actionInformativeTitleTextColor</item>
        <item name="android:textSize">@dimen/actionInformativeTitleTextSize</item>
        <item name="android:fontFamily">@font/gt_america</item>
    </style>

    <style name="ActionInformativeSubtitleText">
        <item name="android:textSize">@dimen/actionInformativeSubtitleTextSize</item>
        <item name="android:textColor">@color/actionInformativeSubtitleTextColor</item>
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_marginEnd">@dimen/actionInformationSubtitleTextMarginEnd</item>
    </style>

    <style name="ActionInformativeButton">
        <item name="grapesButtonSize">small</item>
        <item name="grapesButtonStyle">primary</item>
    </style>
    <!-- endregion Buckets -->

    <!-- region blocks -->

    <!-- region partial block -->
    <style name="PartialContentBlockTitle">
        <item name="android:fontFamily">@font/gt_america_bold</item>
        <item name="android:textColor">@color/partialContentBlockTitleTextColor</item>
        <item name="android:textSize">@dimen/partialContentBlockTitleTextSize</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="PartialContentBlockOptional">
        <item name="android:visibility">gone</item>
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:textColor">@color/partialContentBlockOptionalTextColor</item>
        <item name="android:textSize">@dimen/partialContentBlockOptionalTextSize</item>
    </style>

    <style name="PartialContentBlockTitleActionText">
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:textColor">@color/inlineBlockTitleActionTextColor</item>
        <item name="android:textSize">@dimen/inlineBlockTitleActionTextSize</item>
    </style>
    <!-- endregion partial block -->

    <style name="InlineBlockViewKey">
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:gravity">start</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/inlineBlockViewKeyTextColor</item>
        <item name="android:textSize">@dimen/inlineBlockViewKeyTextSize</item>
    </style>

    <style name="PartialContentBlockTitleEnd">
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:gravity">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/partialContentBlockTitleEndTextColor</item>
        <item name="android:textSize">@dimen/partialContentBlockTitleEndTextTextSize</item>
    </style>

    <style name="PartialContentBlockEndImage">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ItemApproverStatusText">
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:textColor">@color/mainComplementary</item>
        <item name="android:textSize">@dimen/itemBlockApproverTitleTextSize</item>
    </style>

    <style name="summaryBlockResponsibilityCenterDescription">
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:textColor">@color/summaryBlockResponsibilityCenterDescriptionTextColor</item>
        <item name="android:textSize">@dimen/summaryBlockContentResponsibilityCenterDescriptionTextSize</item>
    </style>

    <style name="ResponsibilityCenterGaugeContainer">
        <item name="cardCornerRadius">@dimen/responsibilityCenterGaugeViewCardRadius</item>
        <item name="cardBackgroundColor">@color/responsibilityCenterGaugeViewCardBackgroundColor</item>
        <item name="cardElevation">@dimen/responsibilityCenterGaugeViewCardElevation</item>
    </style>

    <style name="ResponsibilityCenterGaugeBackground">
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/responsibilityCenterGaugeViewBackground</item>
        <item name="layout_constraintDimensionRatio">@string/responsibilityCenterGaugeViewSecondaryAspectRatio</item>
    </style>

    <style name="ResponsibilityCenterGaugeLimitView">
        <item name="android:visibility">gone</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- endregion blocks -->

    <!-- region UserSupplierInline -->
    <style name="UserSupplierInlineSmallImage">
        <item name="android:padding">@dimen/userSupplierInlineSmallImagePadding</item>
        <item name="android:background">@drawable/shape_rect_solidwhite_stroke2white_radius2</item>
    </style>

    <style name="UserSupplierInlineTitle">
        <item name="android:textSize">@dimen/userSupplierInlineTitleText</item>
        <item name="android:textColor">@color/userSupplierInlineTitleText</item>
        <item name="android:fontFamily">@font/gt_america_bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="UserSupplierInlineSubtitle">
        <item name="android:textSize">@dimen/userSupplierInlineSubtitleText</item>
        <item name="android:textColor">@color/userSupplierInlineSubtitleText</item>
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- endregion UserSupplierInline -->

    <!-- region Toaster -->

    <style name="ToasterLayout">
        <item name="android:padding">@dimen/toasterLayoutPadding</item>
    </style>

    <style name="ToasterTextContainer">
        <item name="android:background">@drawable/shape_rect_soliddarkest_radius8</item>
        <item name="android:padding">@dimen/toasterContainerPadding</item>
    </style>

    <style name="ToasterText">
        <item name="android:textColor">@color/toasterText</item>
        <item name="android:textSize">@dimen/toasterText</item>
        <item name="android:fontFamily">@font/gt_america_bold</item>
    </style>

    <!-- endregion Toaster -->

    <!-- region Security Code Validation CardView -->

    <style name="RegistrationCodeViewText">
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:hint">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword|textNoSuggestions</item>
        <item name="android:digits">0123456789</item>
        <item name="android:letterSpacing">@dimen/registrationCodeViewTextLetterSpacing</item>
        <item name="android:textSize">@dimen/registrationCodeViewTextSize</item>
        <item name="android:textColor">@color/registrationCodeViewTextColor</item>
    </style>

    <style name="RegistrationCodeViewSeparatorView">
        <item name="android:background">@color/registrationCodeViewSeparatorViewBackground</item>
    </style>

    <!-- endregion Security Code Validation CardView -->

    <!-- region CustomNumberKeyboardText -->

    <style name="CustomNumberKeyboardText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/customNumberKeyboardTextColor</item>
        <item name="android:textSize">@dimen/customNumberKeyboardTextSize</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="CustomNumberKeyboardBiometricImage">
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_biometric_fingerprint</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="CustomNumberKeyboardDeleteImage">
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_delete_return</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- endregion CustomNumberKeyboardText -->

    <!-- TODO: This should not exist and a Light and Dark Grapes App Theme should be put in place-->
    <style name="SwitchCardTextSwitch">
        <item name="colorControlActivated">@color/mainPrimaryNormal</item>
    </style>

    <style name="SwitchCardText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="android:textColor">@color/switchCardTextColor</item>
        <item name="android:textSize">@dimen/switchCardTextSize</item>
    </style>
</resources>
