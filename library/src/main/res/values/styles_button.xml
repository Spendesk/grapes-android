<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonText">
        <item name="android:fontFamily">@font/gt_america_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonHorizontalProgressBar">
        <item name="android:visibility">gone</item>
        <item name="android:indeterminate">false</item>
        <item name="android:max">100</item>
    </style>

    <style name="ButtonCircularProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:visibility">gone</item>
        <item name="android:indeterminate">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/normalMargin</item>
        <item name="android:maxWidth">@dimen/normalMargin</item>
        <item name="android:minHeight">@dimen/normalMargin</item>
        <item name="android:maxHeight">@dimen/normalMargin</item>
    </style>

</resources>