<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.GrapesSamples" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/mainWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/activityBackground</item>
        <item name="android:fontFamily">@font/gt_america</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GrapesSamples.Launcher" parent="Theme.GrapesSamples">
        <item name="android:windowBackground">@drawable/layer_list_splashscreen</item>
    </style>

    <style name="Toolbar.Theme" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:fontFamily">@font/gt_america_bold</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/toolbarBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:theme">@style/Toolbar.Theme</item>
    </style>

    <style name="HomeTabLayout">
        <item name="tabMode">scrollable</item>
        <item name="android:background">@color/toolbarBackground</item>
    </style>

    <style name="HomeGenericHeaderView">
        <item name="android:background">@color/mainPrimaryLightest</item>
    </style>
</resources>